# gitignore generator
gi() {
	typeset IFS=,
	curl -sL "https://www.toptal.com/developers/gitignore/api/$*"
}

# outputs a banner of $1 with each line prepended with $2
combanner() {
	com=$(echo $1 | sed 's/\\/\\\\/g; s/\//\\\//g')
	shift
	figlet "$@" | sed "s/^/$com /g"
}

dotfile-install() {
	if ! [ -d ~/dotfiles/$1 ]; then
		return 1
	fi
	dotfile $1 && awk -F ' *: *' "/$1/{print $2}" ~/dotfiles/dependency.list | sed 's/ \|\t/\n/g' | sudo pacman --needed -S -
}
