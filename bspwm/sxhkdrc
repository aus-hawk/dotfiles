# This config is made for programmer dvorak. The associated QWERTY keys are
# listed in the comment above if it is different from dvp.

#
# wm independent hotkeys
#

# terminal emulator
super + Return
    kitty

# program launcher
super + space
    rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
    pkill -USR1 -x sxhkd

# audio keys
XF86Audio{Lower,Raise}Volume
    pactl set-sink-volume @DEFAULT_SINK@ {-,+}5%

XF86AudioMute
    pactl set-sink-mute @DEFAULT_SINK@ toggle

XF86AudioMicMute
    pactl set-source-mute @DEFAULT_SOURCE@ toggle

XF86Audio{Play,Stop,Prev,Next}
    playerctl {play-pause,stop,previous,next}

# brightness keys
XF86MonBrightness{Down,Up}
    light -{U,A} 10

# screenshots
{_,super + ,ctrl + }@Print
    maim {_,-su,-d 3} | tee ~/pictures/screenshots/$(date +%F_%T).png | \
    xclip -selection clipboard -t image/png

super + shift + @Print
    maim -i $(xdotool getactivewindow) | \
    tee ~/pictures/screenshots/$(date +%F_%T).png | \
    xclip -selection clipboard -t image/png

#
# bspwm hotkeys
#

# quit/restart bspwm
# super + alt + {q,r}
super + alt + {semicolon,p}
    bspc {quit,wm -r}

# close and kill
# super + shift + q
super + shift + semicolon
    bspc node -k

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# send the newest marked node to the newest preselected node
# super + y
super + f
    bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
# super + g
super + i
    bspc node -s biggest.window

#
# state/flags
#

# set the window state
# super + {t,shift + t,s,f}
super + {y,shift + y,o,u}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
# super + ctrl + {m,x,y,z}
super + ctrl + {m,q,f,apostrophe}
    bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
# super + {_,shift + }{h,j,k,l}
super + {_,shift + }{d,h,t,n}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
# super + {p,b,comma,period}
super + {l,x,w,v}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
# super + {_,shift + }c
super + {_,shift + }j
    bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
# super + bracket{left,right}
super + {slash,at}
    bspc desktop -f {prev,next}.local

# focus the last node/desktop
# super + {grave,Tab}
super + {dollar,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
# super + {o,i}
super + {r,c}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
# super + {_,shift + }{1-9,0}
super + {_,shift + }{ampersand,bracketleft,braceleft,braceright,parenleft,equal,asterisk,parenright,plus,bracketright}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
# super + ctrl + {h,j,k,l}
super + ctrl + {d,h,t,n}
    bspc node -p {west,south,north,east}

# preselect the ratio
# super + ctrl + {1-9}
super + ctrl + {ampersand,bracketleft,braceleft,braceright,parenleft,equal,asterisk,parenright,plus}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
# super + alt + {h,j,k,l}
super + alt + {d,h,t,n}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
# super + alt + shift + {h,j,k,l}
super + alt + shift + {d,h,t,n}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}
